<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="84dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/limitlessModeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/WAVES_MODE_BUTTON_LABEL"
        android:textSize="24sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/wavesModeButton"
        app:layout_constraintEnd_toEndOf="@+id/wavesModeButton"
        app:layout_constraintStart_toStartOf="@+id/wavesModeButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wavesModeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/STATS_BUTTON_LABEL"
        android:textSize="24sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sandboxModeButton"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/KNOWLEDGE_BASE_BUTTON_LABEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/wavesModeButton"
        app:layout_constraintStart_toStartOf="@+id/wavesModeButton"
        app:layout_constraintTop_toBottomOf="@+id/wavesModeButton" />


</androidx.constraintlayout.widget.ConstraintLayout>